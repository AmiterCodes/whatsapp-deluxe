{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "isolatedModules": false,
    "jsx": "react",
    "outDir": "./lib",
    "declaration": true
  },
  "include": [
    "src"
  ]
}
